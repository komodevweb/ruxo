PROJECT_NAME="Ruxo API"
VERSION="0.1.0"
API_V1_STR="/api/v1"
ENVIRONMENT="production"

# Database (Use your production PostgreSQL connection string)
DATABASE_URL="postgresql+asyncpg://postgres:YOUR_PASSWORD@your-db-host:5432/ruxo"

# Supabase
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-anon-key"
SUPABASE_JWT_SECRET="your-jwt-secret"
SUPABASE_ACCESS_TOKEN=""
SUPABASE_PROJECT_REF=""

# Azure OAuth (optional)
AZURE_CLIENT_ID=""
AZURE_CLIENT_SECRET=""

# Stripe (Use LIVE keys for production)
STRIPE_API_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Backblaze B2 Storage
B2_APPLICATION_KEY_ID="your-key-id"
B2_APPLICATION_KEY="your-application-key"
B2_BUCKET_NAME="ruxo-media"
B2_BUCKET_ID=""

# WaveSpeed AI
WAVESPEED_API_KEY="your-wavespeed-api-key"
WAVESPEED_API_URL="https://api.wavespeed.ai/api/v3"

# Frontend URLs (Production)
FRONTEND_URL="https://ruxo.ai"
BACKEND_BASE_URL="https://api.ruxo.ai"

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Secret Keys (Generate with: python scripts/generate_secrets.py)
SECRET_KEY="CHANGE_THIS_TO_A_RANDOM_32_BYTE_HEX_STRING"
API_KEY_ENCRYPTION_KEY="CHANGE_THIS_TO_A_BASE64_ENCODED_32_BYTE_KEY"

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Admin Configuration
ADMIN_EMAILS="admin@ruxo.ai"
SUPER_ADMIN_EMAIL="admin@ruxo.ai"

# Security Headers
SECURITY_HEADERS_ENABLED=true
ALLOWED_HOSTS="api.ruxo.ai,ruxo.ai"

# CORS Origins (Production domains)
BACKEND_CORS_ORIGINS="https://ruxo.ai,https://www.ruxo.ai"

# CORS Advanced
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Logging & Monitoring
SENTRY_DSN=""
LOG_LEVEL="INFO"
ENABLE_AUDIT_LOGGING=true

# Webhook Security
WEBHOOK_TIMESTAMP_TOLERANCE=300

# Password/Token Policies
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_COMPLEXITY=false

# ============================================
# REDIS CONFIGURATION
# ============================================

# Redis URL (Use production Redis instance)
REDIS_URL="redis://localhost:6379/0"
REDIS_ENABLED=true
REDIS_CACHE_TTL=3600

