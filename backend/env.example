PROJECT_NAME="Ruxo API"
VERSION="0.1.0"
API_V1_STR="/api/v1"
ENVIRONMENT="development"

# Database
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/ruxo"

# Supabase
# SUPABASE_URL: Your Supabase project URL (e.g., https://xxxxx.supabase.co)
SUPABASE_URL="https://your-project.supabase.co"
# SUPABASE_KEY: Optional - Only needed if using Supabase client library (anon/public key)
SUPABASE_KEY="your-anon-key"
# SUPABASE_JWT_SECRET: REQUIRED - Get from Supabase Dashboard > Settings > API > JWT Secret
SUPABASE_JWT_SECRET="your-jwt-secret"

SUPABASE_ACCESS_TOKEN=""
SUPABASE_PROJECT_REF="cutgibszjdnxsrlclbos"
AZURE_CLIENT_ID=""
AZURE_CLIENT_SECRET=""

# Stripe
# STRIPE_API_KEY: Your Stripe SECRET key (starts with sk_test_ for test mode, sk_live_ for production)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET: Webhook signing secret (starts with whsec_)
# Get from: Stripe Dashboard > Developers > Webhooks > Add endpoint > Signing secret
STRIPE_WEBHOOK_SECRET="whsec_..."

# Backblaze B2 Storage
# B2_APPLICATION_KEY_ID: Your Backblaze B2 Application Key ID
# Get from: Backblaze Dashboard > App Keys
B2_APPLICATION_KEY_ID="your-key-id"
# B2_APPLICATION_KEY: Your Backblaze B2 Application Key (secret)
B2_APPLICATION_KEY="your-application-key"
# B2_BUCKET_NAME: Name of your B2 bucket
B2_BUCKET_NAME="ruxo-media"
# B2_BUCKET_ID: Optional - Bucket ID (will be auto-detected if not provided)
B2_BUCKET_ID=""
# Note: Files will be served directly from Backblaze B2 public URLs

# WaveSpeed AI
# WAVESPEED_API_KEY: Your WaveSpeed AI API key
# Get from: https://wavespeed.ai/dashboard/api-keys
WAVESPEED_API_KEY="your-wavespeed-api-key"
# WAVESPEED_API_URL: WaveSpeed AI API base URL (default: https://api.wavespeed.ai/api/v3)
WAVESPEED_API_URL="https://api.wavespeed.ai/api/v3"

# Frontend
FRONTEND_URL="http://localhost:3000"
BACKEND_BASE_URL="http://localhost:8000"

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Secret Keys (Generate with: python scripts/generate_secrets.py)
SECRET_KEY="CHANGE_THIS_TO_A_RANDOM_32_BYTE_HEX_STRING"
API_KEY_ENCRYPTION_KEY="CHANGE_THIS_TO_A_BASE64_ENCODED_32_BYTE_KEY"
# Note: SESSION_SECRET not needed if using Supabase JWT-only auth (Supabase handles sessions)

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Admin Configuration
ADMIN_EMAILS="admin@ruxo.ai"
SUPER_ADMIN_EMAIL="admin@ruxo.ai"

# Security Headers
SECURITY_HEADERS_ENABLED=true
ALLOWED_HOSTS="localhost,127.0.0.1"

# Logging & Monitoring
SENTRY_DSN=""
LOG_LEVEL="INFO"
ENABLE_AUDIT_LOGGING=true

# Webhook Security
WEBHOOK_TIMESTAMP_TOLERANCE=300

# Password/Token Policies (for future use)
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_COMPLEXITY=false

# CORS Advanced
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600
